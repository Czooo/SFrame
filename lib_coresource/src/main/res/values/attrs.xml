        <attr name="layoutKey" format="integer|reference|flags">
            <flag name="toolbar" value="1"/>
            <flag name="content" value="2"/>
            <flag name="loading" value="3"/>
            <flag name="error" value="4"/>
        </attr>
    </declare-styleable>
